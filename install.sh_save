cp -v "$ruta/.zshrc" ~/.zshrc
cp -v "$ruta/.p10k.zsh" ~/.p10k.zsh

# Configuraci√≥n para root
sudo cp -v "$ruta/.p10k.zsh-root" /root/.p10k.zsh


# Script y screenshot
