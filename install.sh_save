# Creamos carpeta para clonar los repos necesarios
mkdir -p ~/github


# Clonamos repos de Polybar y Picom
cd ~/github
git clone --recursive https://github.com/polybar/polybar
git clone https://github.com/ibhagwan/picom.git


# Compilamos e instalamos Polybar
cd ~/github/polybar
mkdir build
cd build
cmake ..
make -j$(nproc)  # Compila usando todos los n√∫cleos
sudo make install


# Compilamos e instalamos Picom con soporte para transparencias y blur
cd ~/github/picom
git submodule update --init --recursive
meson --buildtype=release . build
ninja -C build
sudo ninja -C build install



# Instalaci√≥n de Powerlevel10k (p10k)
git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ~/.powerlevel10k
echo 'source ~/.powerlevel10k/powerlevel10k.zsh-theme' >> ~/.zshrc

# Clonamos el tema Powerlevel10k tambi√©n para el usuario root
sudo git clone --depth=1 https://github.com/romkatv/powerlevel10k.git /root/.powerlevel10k
echo 'source /root/.powerlevel10k/powerlevel10k.zsh-theme' | sudo tee -a /root/.zshrc


# Configuraci√≥n del tema Nord para Rofi
mkdir -p ~/.config/rofi/themes
cp "$ruta/rofi/nord.rasi" ~/.config/rofi/themes/


# Instalaci√≥n de lsd desde el archivo .deb
sudo dpkg -i "$ruta/lsd.deb"


# Instalaci√≥n de Hack Nerd Fonts
sudo cp -v "$ruta/fonts/HNF/"* /usr/local/share/fonts/


# Instalaci√≥n de fuentes para Polybar
sudo cp -v "$ruta/Config/polybar/fonts/"* /usr/share/fonts/truetype/


# Refrescamos la cach√© de fuentes del sistema
