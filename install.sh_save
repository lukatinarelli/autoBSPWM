sudo wget https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/plugins/sudo/sudo.plugin.zsh

# Usamos la misma config de ZSH para root
sudo ln -sfv ~/.zshrc /root/.zshrc


